generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  units       Unit[]
}

model Unit {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  courseId    Int
  chapters    Chapter[]
  course      Course    @relation(fields: [courseId], references: [id])
}

model Chapter {
  id              Int           @id @default(autoincrement())
  title           String
  description     String
  unitId          Int
  additionalfiles Json?
  unit            Unit          @relation(fields: [unitId], references: [id])
  steps           Step[]
  userChapters    UserChapter[]
}

model Step {
  id          Int     @id @default(autoincrement())
  description String
  chapterId   Int
  chapter     Chapter @relation(fields: [chapterId], references: [id])
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  isVerified   Boolean
  userChapters UserChapter[]
}

model UserChapter {
  id              Int     @id @default(autoincrement())
  user_id         Int
  chapter_id      Int
  files           Json
  steps_completed Int
  chapter         Chapter @relation(fields: [chapter_id], references: [id])
  user            User    @relation(fields: [user_id], references: [id])
}
